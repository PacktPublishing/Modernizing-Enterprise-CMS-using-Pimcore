
{% extends 'BlogBundle:Layout:layout.html.twig' %}

{% block content %}

{% include 'BlogBundle:Layout:header.html.twig' %}

    <!-- Page Content -->
  <div class="container">
    <div class="row">

      <!-- Post Content Column -->
      <div class="col-lg-8">
      <h3 class="pb-4 mb-4 font-italic border-bottom">Article for {{category.getTitle()}}</h3>
       <div class="card-deck">
         {% for article in articles %}
          {% set content = article.getContent() | length > 200 ? article.getContent() | slice(0, 200) ~ '...' : article.getContent() %} 
             <div class="col-md-12">
                <div class="card"  style="margin:10px;">
                  <a href="blog/article{{article.getSlug()[0].getSlug()}}">
                    <img class="card-img-top" src="{{article.getImage()}}" alt="Card image cap">
                  </a>
                    <div class="card-body">
                      <a href="/blog/article{{article.getSlug()[0].getSlug()}}">
                        <h5 class="card-title">{{article.getTitle()}}</h5>
                      </a>
                        <small class="text-muted">by <a href="/blog/author{{article.getAuthor().getSlug()[0].getSlug()}}">{{article.getAuthor().getFirstName()}}</a></small>
                        <p class="card-text">{{ content | raw  }}</p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Posted on ...</small>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
      </div>

        <!-- Sidebar Widgets Column -->
      <div class="col-md-4">
        {% include 'BlogBundle:Widget:widget.html.twig' %}
      </div>
    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

{%  endblock %}